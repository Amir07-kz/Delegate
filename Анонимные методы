using System;
using System.Text;
using System.Threading.Tasks;
using System.Collections.Generic;
using System.Linq;

namespace DzhunuskhodzhaevAmirxan
{
    class Program
    {
        delegate int ArrOfDelegates(int[] delegates);
        class Deleg
        {
            public static int Random()
            {
                Random rand = new Random();
                return rand.Next(1, 10);
            }
            static void Main()
            {
                Console.WriteLine("Массив :\n");
                int[] number = new int[5];
                for (int i = 0; i < number.Length; i++)
                {
                    number[i] = Random();
                    Console.Write(number[i] + "  ");
                }

                Console.WriteLine("\n");

                Console.WriteLine("Среднее арифметическое :\n");
               
                ArrOfDelegates delegat = delegate(int[] delegates)
                {
                    int sum = 0;
                    for (int i = 0; i < delegates.Length; i++)
                    {
                        sum += delegates[i];
                    }
                    return ((sum) / (delegates.Length));
                };
                Console.WriteLine(delegat(number) + "");
            }
        }
    }
}
